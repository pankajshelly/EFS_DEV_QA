                "retrieve": true,
                "stateSave": true,
                //"scrollX": "100%",
                //"scrollY": "100%",
                "mData": null,
                "sDefaultContent": "Edit",
                "sAjaxSource": "../_UC_G_TransferIn/GetContributionsTransferInSearchData",
                "bAutoWidth": false,
                "columnDefs": [
